<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.10">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
            android:id="@+id/boliche_banner"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@color/common_google_signin_btn_text_light_disabled"
            android:id="@+id/sombra"
            android:background="@android:color/darker_gray"
            android:alpha="0.65"
            android:layout_alignBottom="@+id/boliche_banner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/boliche_nombre" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boliche_nombre"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_alignBottom="@+id/boliche_banner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>